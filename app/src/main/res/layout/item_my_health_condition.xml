<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Blood Pressure"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18" />


                <com.mE.Health.utility.roundview.RoundTextView
                    android:id="@+id/tvStatus"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="Active"
                    android:textColor="@color/color_06C270"
                    android:textSize="@dimen/sp_8"
                    app:rv_backgroundColor="@color/color_A06C270"
                    app:rv_isRadiusHalfHeight="true" />

            </RelativeLayout>


            <TextView
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 12, 2024"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/sp_12" />


            <com.mE.Health.utility.roundview.RoundTextView
                android:id="@+id/tvLogin"
                style="@style/textStyleSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="View Details"
                android:paddingHorizontal="@dimen/dp_30"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_isRadiusHalfHeight="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>