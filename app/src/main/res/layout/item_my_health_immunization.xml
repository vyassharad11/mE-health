<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_5"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_2"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="COVID-19 Vaccine"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />


                <com.mE.Health.utility.roundview.RoundTextView
                    android:id="@+id/tvStatus"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="Completed"
                    android:textColor="@color/color_06C270"
                    android:textSize="@dimen/sp_8"
                    app:rv_backgroundColor="@color/color_A06C270"
                    app:rv_isRadiusHalfHeight="true" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvAdministeredDate"
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Administered on 12/15/2023"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/sp_12" />

            <TextView
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="John Smith"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/sp_12" />


            <TextView
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Annual Check-up"
                android:textColor="@color/color_878787"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_height="wrap_content">

                <com.mE.Health.utility.roundview.RoundTextView
                    android:id="@+id/tvViewDetails"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:paddingHorizontal="@dimen/dp_30"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="View Details"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    app:rv_backgroundColor="@color/color_FF6605"
                    app:rv_isRadiusHalfHeight="true" />

                <com.mE.Health.utility.roundview.RoundTextView
                    android:id="@+id/tvViewPatient"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingHorizontal="@dimen/dp_30"
                    android:paddingVertical="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_alignParentRight="true"
                    app:rv_strokeColor="@color/color_878787"
                    android:text="View Patient"
                    app:rv_strokeWidth="@dimen/dp_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:rv_isRadiusHalfHeight="true" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>