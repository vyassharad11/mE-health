<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                style="@style/textStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="@string/treatment"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_34" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_3"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_12">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/textStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="center_vertical"
                                android:text="Hypertension"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_20" />


                            <com.mE.Health.utility.roundview.RoundTextView
                                style="@style/textStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_vertical"
                                android:paddingHorizontal="@dimen/dp_20"
                                android:paddingVertical="@dimen/dp_5"
                                android:text="@string/active"
                                android:textColor="@color/color_06C270"
                                android:textSize="@dimen/sp_8"
                                app:rv_backgroundColor="@color/color_A06C270"
                                app:rv_isRadiusHalfHeight="true" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/textStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/onset"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="01/05/2022"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_16" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/textStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Recorded"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="01/10/2022"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_16" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/textStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/category_"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="Chronic"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_16" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/textStyleRegular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Condition ID"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_14" />

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dp_2"
                                        android:text="#HYP2022105"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_16" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_12">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/textStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. David Joe"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_18" />

                            <com.mE.Health.utility.roundview.RoundTextView
                                style="@style/textStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_vertical"
                                android:paddingHorizontal="@dimen/dp_20"
                                android:paddingVertical="@dimen/dp_5"
                                android:text="@string/booked"
                                android:textColor="@color/color_06C270"
                                android:textSize="@dimen/sp_8"
                                app:rv_backgroundColor="@color/color_A06C270"
                                app:rv_isRadiusHalfHeight="true" />

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/dp_5"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/dp_6"
                                android:background="@color/color_FF6605" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textStyleRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Apollo Hospital"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    style="@style/textStyleRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:text="11 Jun 2025,\n03:30 PM - 4:00 PM"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_12" />

                                <TextView
                                    style="@style/textStyleRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="Based on your recent activity and climate,\nhere’s personalized guidance on your daily\nwater intake to stay hydrated and healthy."
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_10" />

                                <TextView
                                    style="@style/textStyleSemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_5"
                                    android:text="@string/read_more"
                                    android:textColor="@color/text_color_orange"
                                    android:textSize="@dimen/sp_13" />

                            </LinearLayout>

                            <com.mE.Health.utility.roundview.RoundTextView
                                android:id="@+id/tvStatus"
                                style="@style/textStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/dp_10"
                                android:paddingHorizontal="@dimen/dp_20"
                                android:paddingVertical="@dimen/dp_5"
                                android:text="Final"
                                android:textColor="@color/color_06C270"
                                android:textSize="@dimen/sp_8"
                                app:rv_backgroundColor="@color/color_A06C270"
                                app:rv_isRadiusHalfHeight="true" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20">

                    <TextView
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/practitioners"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_22" />

                    <com.mE.Health.utility.roundview.RoundTextView
                        android:id="@+id/tvPractitionersViewAll"
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingHorizontal="@dimen/dp_20"
                        android:paddingVertical="@dimen/dp_5"
                        android:text="@string/view_all"
                        android:textColor="@color/color_06C270"
                        android:textSize="@dimen/sp_10"
                        app:rv_backgroundColor="@color/color_A06C270"
                        app:rv_isRadiusHalfHeight="true" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_15">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dummy_doctor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textStyleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. John Doe"
                            android:textColor="@color/text_color_orange"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apollo Hospital"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_30">

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visits"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_22" />

                <com.mE.Health.utility.roundview.RoundTextView
                    android:id="@+id/tvVisitsViewAll"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:paddingVertical="@dimen/dp_5"
                    android:text="@string/view_all"
                    android:textColor="@color/color_06C270"
                    android:textSize="@dimen/sp_10"
                    app:rv_backgroundColor="@color/color_A06C270"
                    app:rv_isRadiusHalfHeight="true" />
            </RelativeLayout>

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/sp_12">


                    <com.mE.Health.utility.roundview.RoundLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_10"
                        app:rv_backgroundColor="@color/color_AFF6605"
                        app:rv_cornerRadius="@dimen/dp_10">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:src="@drawable/ic_calendar" />

                    </com.mE.Health.utility.roundview.RoundLinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11 Jun 2025"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC Hospital"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </LinearLayout>

            </com.mE.Health.utility.roundview.RoundLinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:background="@color/color_FF6605" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lab_result"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_18" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/textStyleMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hemoglobin"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    style="@style/textStyleSemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="13.5"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/textStyleMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wbc"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
                                    style="@style/textStyleSemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="5.6"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:background="@color/color_FF6605" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    style="@style/textStyleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/procedure"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_18" />


                                <com.mE.Health.utility.roundview.RoundTextView
                                    style="@style/textStyleSemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/dp_20"
                                    android:paddingVertical="@dimen/dp_5"
                                    android:text="@string/active"
                                    android:textColor="@color/color_06C270"
                                    android:textSize="@dimen/sp_10"
                                    app:rv_backgroundColor="@color/color_A06C270"
                                    app:rv_isRadiusHalfHeight="true" />

                            </LinearLayout>

                            <TextView
                                style="@style/textStyleMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="Appendectomy"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                style="@style/textStyleMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="03/15/2024"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_14" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:background="@color/color_FF6605" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    style="@style/textStyleBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Current Medication"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_18" />


                                <com.mE.Health.utility.roundview.RoundTextView
                                    style="@style/textStyleSemiBold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/dp_20"
                                    android:paddingVertical="@dimen/dp_5"
                                    android:text="@string/completed"
                                    android:textColor="@color/color_06C270"
                                    android:textSize="@dimen/sp_10"
                                    app:rv_backgroundColor="@color/color_A06C270"
                                    app:rv_isRadiusHalfHeight="true" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textStyleMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Amoxicillin"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />

                                <TextView
