<?xml version="1.0" encoding="utf-8"?>
<com.mE.Health.utility.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:rv_backgroundColor="@color/transparent"
    tools:ignore="MissingDefaultResource">


    <com.mE.Health.utility.roundview.RoundLinearLayout
        android:id="@+id/rllCancel"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:gravity="center"
        app:rv_backgroundColor="@color/background_color"
        app:rv_isRadiusHalfHeight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross_arrow_black" />

    </com.mE.Health.utility.roundview.RoundLinearLayout>


    <com.mE.Health.utility.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_50"
        app:rv_backgroundColor="@color/background_color"
        app:rv_cornerRadius_TL="@dimen/dp_30"
        app:rv_cornerRadius_TR="@dimen/dp_30"
        tools:ignore="MissingDefaultResource">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tvName"
                style="@style/textStyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="Series 1"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_image_preview"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="@string/image_report"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="Report.jpg"
                    android:textColor="@color/text_color_primary"
                    android:textSize="@dimen/sp_17"
                    android:visibility="gone" />
            </LinearLayout>


            <com.mE.Health.utility.roundview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_image_preview_full"
                app:rv_cornerRadius="@dimen/dp_10" />


        </LinearLayout>

    </com.mE.Health.utility.roundview.RoundLinearLayout>
</com.mE.Health.utility.roundview.RoundLinearLayout>