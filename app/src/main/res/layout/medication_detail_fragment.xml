<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">


            <TextView
                style="@style/textStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/detail"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_24" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:background="@color/color_FF6605" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMedicationDisplay"
                                style="@style/textStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_18" />

                            <TextView
                                style="@style/textStyleRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="Capsule - Oral Suspension"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tvDate"
                                style="@style/textStyleRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:text="06/11/2025"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>

                        <com.mE.Health.utility.roundview.RoundTextView
                            android:id="@+id/tvStatus"
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_5"
                            android:text="Active"
                            android:textColor="@color/color_06C270"
                            android:textSize="@dimen/sp_8"
                            app:rv_backgroundColor="@color/color_A06C270"
                            app:rv_isRadiusHalfHeight="true" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_15">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dummy_doctor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textStyleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Michael Chen"
                            android:textColor="@color/text_color_orange"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MBBS, Physician\nHospital Name"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/sp_12">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/textStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/medication_id"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:id="@+id/tvMedicationId"
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="123..."
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6">

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Label Field Notes"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Take with food..."
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_13" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_15">


                    <TextView
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dosage_instruction"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/tvDosageInstruction"
                        style="@style/textStyleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:textColor="@color/color_6E6B78"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/visits"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_18" />

                        <com.mE.Health.utility.roundview.RoundTextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_5"
                            android:text="Active"
                            android:textColor="@color/color_06C270"
                            android:textSize="@dimen/sp_10"
                            app:rv_backgroundColor="@color/color_A06C270"
                            app:rv_isRadiusHalfHeight="true" />

                    </RelativeLayout>

                    <TextView
                        style="@style/textStyleRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="Recorded Date: 06/11/2025"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_15">


                    <TextView
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reason"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:id="@+id/tvReason"
                        style="@style/textStyleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:textColor="@color/color_6E6B78"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                layout="@layout/layout_sync_share_button" />

            <com.mE.Health.utility.roundview.RoundTextView
                android:id="@+id/tvEditMedication"
                style="@style/textStyleSemiBold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/edit_medication"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_isRadiusHalfHeight="true" />

            <include layout="@layout/bottom_view" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>