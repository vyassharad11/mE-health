<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.mE.Health.utility.roundview.RoundLinearLayout
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_alignParentEnd="true"
        app:rv_backgroundColor="@color/orange"
        app:rv_cornerRadius_BL="@dimen/dp_150" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_34" />

                <TextView
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:text="@string/contact_us_description"
                    android:textColor="@color/color_6E6B78"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_25"
                    android:src="@drawable/contact_us_banner" />

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="Hii Krati "
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_25" />


                <TextView
                    style="@style/textStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_40"
                    android:text="@string/let_us_know"
                    android:textColor="@color/color_6E6B78"
                    android:textSize="@dimen/sp_14" />


                <com.mE.Health.utility.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12"
                    app:rv_cornerRadius="@dimen/dp_6"
                    app:rv_strokeColor="@color/divider_color"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <TextView
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject"
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivEnquiries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_subject" />

                        <LinearLayout
                            android:id="@+id/llEnquiries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/ivEnquiries"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEnquiries"
                                style="@style/textStyleRegular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:hint="@string/investor_enquiries"
                                android:textColor="@color/color_333333"
                                android:textColorHint="@color/color_c8c8c8"
                                android:textSize="@dimen/sp_14" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_1"
                                android:layout_marginTop="@dimen/dp_2"
                                android:background="@color/orange" />

                        </LinearLayout>

                    </RelativeLayout>

                </com.mE.Health.utility.roundview.RoundLinearLayout>

                <com.mE.Health.utility.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12"
                    app:rv_cornerRadius="@dimen/dp_6"
                    app:rv_strokeColor="@color/color_c8c8c8"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <TextView
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/ivComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_comment" />

                        <EditText
                            style="@style/textStyleRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_toEndOf="@+id/ivComment"
                            android:background="@color/white"
                            android:drawablePadding="@dimen/dp_10"
                            android:gravity="top"
                            android:hint="@string/enter_your_thoughts"
                            android:imeOptions="actionDone"
                            android:maxLines="8"
                            android:minLines="8"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_c8c8c8"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>


                </com.mE.Health.utility.roundview.RoundLinearLayout>

                <com.mE.Health.utility.roundview.RoundTextView
                    android:id="@+id/rtvDeleteAccount"
                    style="@style/textStyleSemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_30"
                    android:editable="true"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    app:rv_backgroundColor="@color/color_FF6605"
                    app:rv_isRadiusHalfHeight="true" />


                <include layout="@layout/bottom_view" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</RelativeLayout>