<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/textStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_account"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_34" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/delete_account" />

            <TextView
                style="@style/textStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/delete_account"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18" />

            <TextView
                style="@style/textStyleRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/delete_account_description"
                android:textColor="@color/text_color_primary"
                android:textSize="@dimen/sp_16" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                tools:itemCount="1"
                tools:listitem="@layout/delete_account_list_item" />

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:id="@+id/llInput"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_40"
                app:rv_cornerRadius="@dimen/dp_5"
                android:visibility="gone"
                app:rv_strokeWidth="@dimen/dp_1"
                app:rv_strokeColor="@color/text_color_primary"
                android:padding="@dimen/dp_5"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etEmail"
                    style="@style/textStyleRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@+id/ivUser"
                    android:hint="@string/enter_reason_here"
                    android:imeOptions="actionDone"
                    android:paddingVertical="@dimen/dp_10"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:maxLines="2"
                    android:background="@color/white"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_c8c8c8"
                    android:textSize="@dimen/sp_12" />

            </com.mE.Health.utility.roundview.RoundLinearLayout>

            <com.mE.Health.utility.roundview.RoundTextView
                android:id="@+id/rtvDeleteAccount"
                style="@style/textStyleSemiBold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:text="@string/delete_account"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_isRadiusHalfHeight="true" />

            <include layout="@layout/bottom_view" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>