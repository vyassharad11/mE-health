<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">


            <TextView
                style="@style/textStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/detail"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_24" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_3"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Dust Allergy"
                        android:textColor="@color/text_color_primary"
                        android:textSize="@dimen/sp_19" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/clinical_status"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />

                        <com.mE.Health.utility.roundview.RoundTextView
                            android:id="@+id/tvStatus"
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_5"
                            android:text="@string/active"
                            android:textColor="@color/color_06C270"
                            android:textSize="@dimen/sp_8"
                            app:rv_backgroundColor="@color/color_A06C270"
                            app:rv_isRadiusHalfHeight="true" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/recorded_date"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tvRecordedDate"
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Mar 15, 2024"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15">

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/allergy_id"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="ALG- 2024-392"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3">

                        <TextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/visits"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_18" />

                        <com.mE.Health.utility.roundview.RoundTextView
                            style="@style/textStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dp_10"
                            android:paddingHorizontal="@dimen/dp_20"
                            android:paddingVertical="@dimen/dp_5"
                            android:text="@string/active"
                            android:textColor="@color/color_06C270"
                            android:textSize="@dimen/sp_10"
                            app:rv_backgroundColor="@color/color_A06C270"
                            app:rv_isRadiusHalfHeight="true" />

                    </RelativeLayout>

                    <TextView
                        style="@style/textStyleRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="Recorded Date: 06/11/2025"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_17" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dp_12"
                    android:paddingVertical="@dimen/dp_15">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dummy_doctor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/textStyleMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Michael Chen"
                            android:textColor="@color/text_color_orange"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            style="@style/textStyleRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospital Name"
                            android:textColor="@color/text_color_primary"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_right_arrow" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:background="@color/color_FF6605" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conditions (2)"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_19" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15">

                                <TextView
                                    style="@style/textStyleMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Essential Hypertension"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Clinical Status:"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        style="@style/textStyleBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_2"
                                        android:text="@string/active"
                                        android:textColor="@color/color_06C270"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15">

                                <TextView
                                    style="@style/textStyleMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Type 2 Diabetic"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Clinical Status:"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        style="@style/textStyleBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_2"
                                        android:text="@string/active"
                                        android:textColor="@color/color_06C270"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                app:cardCornerRadius="@dimen/dp_5"
                app:cardElevation="@dimen/dp_5"
                app:strokeColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/dp_5"
                            android:layout_height="match_parent"
                            android:background="@color/color_FF6605" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medications (2)"
                                android:textColor="@color/text_color_primary"
                                android:textSize="@dimen/sp_19" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15">

                                <TextView
                                    style="@style/textStyleMedium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lisinopril 10mg"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_12" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Status:"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        style="@style/textStyleBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_2"
                                        android:text="@string/active"
                                        android:textColor="@color/color_06C270"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15">

                                <TextView
                                    style="@style/textStyleRegular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Metformin 500mg"
                                    android:textColor="@color/text_color_primary"
                                    android:textSize="@dimen/sp_14" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/textStyleSemiBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Status:"
                                        android:textColor="@color/text_color_primary"
                                        android:textSize="@dimen/sp_12" />

                                    <TextView
                                        style="@style/textStyleBold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_2"
                                        android:text="@string/active"
                                        android:textColor="@color/color_06C270"
                                        android:textSize="@dimen/sp_12" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/layoutSyncButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_30"
                layout="@layout/layout_sync_share_button" />


            <include layout="@layout/bottom_view" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>