<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        style="@style/textStyleBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_50"
        android:gravity="center"
        android:text="@string/how_can_help_you"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:orientation="vertical">

        <com.mE.Health.utility.roundview.RoundLinearLayout
            android:id="@+id/rllAiAssistant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_5"
            android:orientation="horizontal"
            app:rv_backgroundColor="@color/color_333333"
            app:rv_cornerRadius="@dimen/dp_6">

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_cornerRadius_BL="@dimen/dp_6"
                app:rv_cornerRadius_TL="@dimen/dp_6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_assistant"
                    android:textColor="@color/color_dadada"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read_more"
                    android:textColor="@color/color_FF6605"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_ai_assistant" />

        </com.mE.Health.utility.roundview.RoundLinearLayout>

        <com.mE.Health.utility.roundview.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:elevation="@dimen/dp_5"
            android:orientation="horizontal"
            app:rv_backgroundColor="@color/color_333333"
            app:rv_cornerRadius="@dimen/dp_6">

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_cornerRadius_BL="@dimen/dp_6"
                app:rv_cornerRadius_TL="@dimen/dp_6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_marketplace"
                    android:textColor="@color/color_dadada"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read_more"
                    android:textColor="@color/color_FF6605"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_market_place" />

        </com.mE.Health.utility.roundview.RoundLinearLayout>

    </LinearLayout>


</RelativeLayout>