<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_20">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/ic_login_logo" />

            <TextView
                style="@style/textStyleBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/your_shadow_brain"
                android:textColor="@color/color_6E6B78"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <com.mE.Health.utility.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12"
                    app:rv_cornerRadius="@dimen/dp_6"
                    app:rv_strokeColor="@color/color_c8c8c8"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <TextView
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivFirstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_email" />

                        <EditText
                            android:id="@+id/etFirstName"
                            style="@style/textStyleRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_toRightOf="@+id/ivFirstName"
                            android:hint="@string/enter_here"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:inputType="textCapSentences"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_c8c8c8"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                </com.mE.Health.utility.roundview.RoundLinearLayout>

                <com.mE.Health.utility.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12"
                    app:rv_cornerRadius="@dimen/dp_6"
                    app:rv_strokeColor="@color/color_c8c8c8"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <TextView
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivLastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_email" />

                        <EditText
                            android:id="@+id/etLastName"
                            style="@style/textStyleRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_toRightOf="@+id/ivLastName"
                            android:hint="@string/enter_here"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_c8c8c8"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                </com.mE.Health.utility.roundview.RoundLinearLayout>

            </LinearLayout>

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                android:padding="@dimen/dp_12"
                app:rv_cornerRadius="@dimen/dp_6"
                app:rv_strokeColor="@color/color_c8c8c8"
                app:rv_strokeWidth="@dimen/dp_1">

                <TextView
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:textColor="@color/color_2b2b2b"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCalendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_calendar" />

                    <EditText
                        android:id="@+id/etDateOfBirth"
                        style="@style/textStyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ivCalendar"
                        android:hint="@string/enter_here"
                        android:cursorVisible="false"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_c8c8c8"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

            </com.mE.Health.utility.roundview.RoundLinearLayout>

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                android:padding="@dimen/dp_12"
                app:rv_cornerRadius="@dimen/dp_6"
                app:rv_strokeColor="@color/color_c8c8c8"
                app:rv_strokeWidth="@dimen/dp_1">

                <TextView
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/color_2b2b2b"
                    android:textSize="@dimen/sp_12" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:src="@drawable/ic_email" />

                    <EditText
                        android:id="@+id/etEmail"
                        style="@style/textStyleRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_toRightOf="@+id/ivUser"
                        android:hint="@string/enter_email"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textColorHint="@color/color_c8c8c8"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>


            </com.mE.Health.utility.roundview.RoundLinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <com.mE.Health.utility.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12"
                    app:rv_cornerRadius="@dimen/dp_6"
                    app:rv_strokeColor="@color/color_c8c8c8"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <TextView
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/country_code"
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_search_black" />

                        <EditText
                            android:id="@+id/etCountryCode"
                            style="@style/textStyleRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_toRightOf="@+id/ivCC"
                            android:hint="@string/enter_here"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="4"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_c8c8c8"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                </com.mE.Health.utility.roundview.RoundLinearLayout>

                <com.mE.Health.utility.roundview.RoundLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_12"
                    app:rv_cornerRadius="@dimen/dp_6"
                    app:rv_strokeColor="@color/color_c8c8c8"
                    app:rv_strokeWidth="@dimen/dp_1">

                    <TextView
                        style="@style/textStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_no"
                        android:textColor="@color/color_2b2b2b"
                        android:textSize="@dimen/sp_12" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_call" />

                        <EditText
                            android:id="@+id/etPhoneNo"
                            style="@style/textStyleRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_toRightOf="@+id/ivCall"
                            android:hint="@string/enter_here"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="12"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/color_333333"
                            android:textColorHint="@color/color_c8c8c8"
                            android:textSize="@dimen/sp_14" />

                    </RelativeLayout>

                </com.mE.Health.utility.roundview.RoundLinearLayout>

            </LinearLayout>

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_f1f1f1"
                app:rv_cornerRadius="@dimen/dp_5">

                <TextView
                    android:id="@+id/tvMale"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:text="@string/male"
                    android:background="@drawable/rounded_bg_checked"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:background="@color/color_aaaeb3" />

                <TextView
                    android:id="@+id/tvFeMale"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:text="@string/female"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/dp_8"
                    android:background="@color/color_aaaeb3" />

                <TextView
                    android:id="@+id/tvOther"
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_8"
                    android:text="@string/other"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </com.mE.Health.utility.roundview.RoundLinearLayout>

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:id="@+id/rllContinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_85"
                android:gravity="center"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_isRadiusHalfHeight="true">

                <com.mE.Health.utility.roundview.RoundTextView
                    style="@style/textStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/continue_"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    app:rv_backgroundColor="@color/color_FF6605"
                    app:rv_isRadiusHalfHeight="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@drawable/ic_arrow_right" />

            </com.mE.Health.utility.roundview.RoundLinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>