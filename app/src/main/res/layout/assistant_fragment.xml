<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_120"
        android:orientation="vertical">

        <com.mE.Health.utility.roundview.RoundLinearLayout
            android:id="@+id/rllAiAssist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dp_5"
            android:orientation="horizontal"
            app:rv_backgroundColor="@color/color_333333"
            app:rv_cornerRadius="@dimen/dp_6">

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_cornerRadius_BL="@dimen/dp_6"
                app:rv_cornerRadius_TL="@dimen/dp_6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_30">

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/assist"
                    android:textColor="@color/color_dadada"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_assist" />

        </com.mE.Health.utility.roundview.RoundLinearLayout>

        <com.mE.Health.utility.roundview.RoundLinearLayout
            android:id="@+id/rllAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:elevation="@dimen/dp_5"
            android:orientation="horizontal"
            app:rv_backgroundColor="@color/color_333333"
            app:rv_cornerRadius="@dimen/dp_6">

            <com.mE.Health.utility.roundview.RoundLinearLayout
                android:layout_width="@dimen/dp_30"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_FF6605"
                app:rv_cornerRadius_BL="@dimen/dp_6"
                app:rv_cornerRadius_TL="@dimen/dp_6" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_30">

                <TextView
                    style="@style/textStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advice"
                    android:textColor="@color/color_dadada"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_advice" />

        </com.mE.Health.utility.roundview.RoundLinearLayout>

    </LinearLayout>


</RelativeLayout>